<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="pt.iade.FitVida.progresso">

    <RadioGroup
        android:id="@+id/radioGroupOpcoes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/image_button_background"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radioButtonDia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Semana" />

        <RadioButton
            android:id="@+id/radioButtonMes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mês" />

        <RadioButton
            android:id="@+id/radioButtonAno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ano" />
    </RadioGroup>

    <TextView
        android:id="@+id/textViewProgresso"
        android:layout_width="95dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/register_frame_layout"
        android:layout_below="@id/radioGroupOpcoes"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="160dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="152dp"
        android:layout_marginBottom="60dp"
        android:text="Progresso"
        android:textSize="20sp" />

    <FrameLayout
        android:id="@+id/register_frame_layout"
        android:layout_width="match_parent"
        android:layout_height="741dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp">
        <!-- Adicione os elementos internos do FrameLayout conforme necessário -->
    </FrameLayout>
</RelativeLayout>
