<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">


    <FrameLayout
        android:id="@+id/register_frame_layout"
        android:layout_width="410dp"
        android:layout_height="570dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3">

    </FrameLayout>

    <Button
        android:id="@+id/register_button"
        android:layout_width="285dp"
        android:layout_height="50dp"
        android:layout_marginBottom="60dp"
        android:onClick="startHome"
        android:text="Registar"
        android:textSize="20sp"
        android:textStyle="bold"
        app:backgroundTint="#2B2C4D"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/register_frame_layout"
        app:layout_constraintStart_toStartOf="@+id/register_frame_layout"
        tools:ignore="OnClick" />

    <ImageView
        android:id="@+id/previus_button"
        android:layout_width="42dp"
        android:layout_height="45dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@+id/register_button"
        app:layout_constraintStart_toStartOf="@+id/register_button"
        app:srcCompat="@drawable/back" />

    <ImageView
        android:id="@+id/next_button"
        android:layout_width="42dp"
        android:layout_height="45dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@+id/register_button"
        app:layout_constraintEnd_toEndOf="@+id/register_button"
        app:srcCompat="@drawable/forward" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="10dp"
        android:text="Preencha o formulÃ¡rio"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="134dp"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>